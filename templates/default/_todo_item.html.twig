<div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
	<div class="d-flex gap-2 w-100 justify-content-between">
		<div>
			<h6 class="mb-0">
				<a href="{{path('todos_show', {id: todo.id})}}" class="title-anchor text-decoration-none">{{todo.title}}</a>
			</h6>

			<div class="tags">
				{% for tag in todo.tags %}
					<span class="badge bg-primary">{{tag.name}}</span>
				{% endfor %}
			</div>
			<p class="mb-0 opacity-75">{{todo.description}}</p>
			<small class="opacity-50 text-nowrap">{{todo.due ? todo.due | date : '-'}}</small>
		</div>
		<a href="#delete" data-entity=":id:">
			<i class="fas fa-trash text-danger fa-xl"></i>
		</a>
	</div>
</div>
